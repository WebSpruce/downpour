<?xml version="1.0" encoding="utf-8" ?>
<com:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:com="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="downpour.Popups.AddCity" Color="Transparent" CanBeDismissedByTappingOutsideOfPopup="False">
    <Frame CornerRadius="10" Padding="5" BorderColor="{StaticResource NewLight0}">
        <StackLayout>
            <Entry Text="{Binding EntryCity}" FontSize="20" FontFamily="LiteOnMedium" HorizontalTextAlignment="Center"></Entry>
            <Button Text="ADD CITY" Command="{Binding AddCityCommand}" FontSize="20" FontFamily="LiteOnBold"></Button>
            <ImageButton Source="Resources/Images/location.png" Command="{Binding AddCityIconCommand}" WidthRequest="30" HeightRequest="30" Aspect="Fill" HorizontalOptions="Center" Margin="0,10,0,0"></ImageButton>
            <ImageButton Source="Resources/Images/list.png" Command="{Binding ShowCitiesCommand}" WidthRequest="30" HeightRequest="30" Aspect="Fill" Margin="10"></ImageButton>

        </StackLayout>
    </Frame>
    
</com:Popup>